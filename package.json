{
    "name": "my-webpack",
    "version": "1.0.0",
    "description": "My webpack for react/ts/styled-components",
    "main": "index.js",
    "author": "Roman <roman.leon4ik@yandex.ru>",
    "license": "ISC",
    "homepage": "https://roman-leonchik.github.io/webpack",
    "scripts": {
        "start": "webpack serve --config webpack/webpack.config.js --env env=dev",
        "build": "webpack --config webpack/webpack.config.js --env env=prod",
        "analyzer": "webpack --config webpack/webpack.config.js --env env=analyzer",
        "lint": "eslint --fix \"./src/**/*.{js,jsx,ts,tsx,json}\"",
        "format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
        "predeploy": "npm run build",
        "deploy": "git push origin `git subtree split --prefix dist master`:gh-pages --force",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Roman-Leonchik/webpack.git"
    },
    "keywords": [
        "webpack",
        "js",
        "react",
        "typescript",
        "styled-components"
    ],
    "dependencies": {
        "@types/styled-components": "^5.1.25",
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.18.2",
        "@babel/plugin-transform-runtime": "^7.17.0",
        "@babel/preset-env": "^7.18.2",
        "@babel/preset-react": "^7.16.7",
        "@babel/preset-typescript": "^7.16.7",
        "@babel/runtime": "^7.17.9",
        "@pmmmwh/react-refresh-webpack-plugin": "^0.5.5",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.2.0",
        "@types/jest": "^27.5.1",
        "@types/react": "^18.0.1",
        "@types/react-dom": "^18.0.0",
        "@typescript-eslint/eslint-plugin": "^5.18.0",
        "@typescript-eslint/parser": "^5.18.0",
        "babel-jest": "^28.1.0",
        "babel-loader": "^8.2.4",
        "copy-webpack-plugin": "^10.2.4",
        "css-loader": "^6.7.1",
        "eslint": "^8.13.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.29.4",
        "eslint-plugin-react-hooks": "^4.4.0",
        "gh-pages": "^3.2.3",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^4.3.8",
        "jest": "^28.1.0",
        "jest-environment-jsdom": "^28.1.0",
        "lint-staged": "^12.3.7",
        "prettier": "^2.6.2",
        "react-refresh": "^0.12.0",
        "style-loader": "^3.3.1",
        "styled-components": "^5.3.5",
        "styled-normalize": "^8.0.7",
        "ts-jest": "^28.0.3",
        "typescript": "^4.6.3",
        "webpack": "^5.72.0",
        "webpack-bundle-analyzer": "^4.5.0",
        "webpack-cli": "^4.9.2",
        "webpack-dev-server": "^4.8.1",
        "webpack-merge": "^5.8.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "ts",
            "tsx"
        ],
        "verbose": true,
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.tsx?$",
        "transform": {
            "^.+\\.(js|jsx|ts|tsx)$": [
                "babel-jest"
            ]
        },
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
            "@testing-library/jest-dom/extend-expect"
        ],
        "collectCoverageFrom": [
            "**/*.(t|j)sx?$"
        ],
        "moduleNameMapper": {
            "^components/(.*)$": "<rootDir>/client/components/$1"
        }
    }
}
